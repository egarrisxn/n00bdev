---
import MainLayout from "../layouts/MainLayout.astro"
import { Image } from 'astro:assets';
import error from '../images/404.png'
---

<MainLayout title="404 Page Not Found">
  <div class="flex flex-col items-center justify-items-center gap-7">
    <Image src={error} alt="404" height={250} width={250} class="mt-10" />
    <h1 class="text-3xl sm:text-4xl md:text-5xl">Page Not Found</h1>
    <p class="text-sm sm:text-base md:text-lg font-bold mb-8">
      Sorry, we don't know what to say.
    </p>
    <a href="/" class="inline-block rounded-lg shadow-md bg-gray-100 p-2 mb-6 hover:bg-teal-500 hover:text-white">Go Back</a>
  </div>
</MainLayout>